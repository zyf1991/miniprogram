<!--pages/my/index.wxml-->
<!-- 需要使用 button 来授权登录 -->
<view wx:if="{{hasUserInfo}}">
<button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">未登录/请登录</button>
</view>
<view wx:else>
  <!-- 背景图 + 信息 start -->
  <view class="my_top">
    <view style="display:flex;align-items:center;">
      <view class="my_topPic">
        <image src="/public/images/mini11.jpg"></image>
      </view>
      <view class="my_topName">
        <view class="topName">
          olive SF
          <view style="display:inline-block;margin-left:10rpx;padding:1px 12px;color:#000;font-size:14px;font-weight:700;border:1px solid #000;border-radius:20px;box-sizing:border-box;">编辑资料</view>
        </view>
        <view class="topMyZYM">
          我的座右铭：但行好事、莫问前程
        </view>
      </view>
    </view>
  </view>
  <!-- 背景图 + 信息 end -->
  <!-- 目标+收藏+中心 start -->
  <view class="mbsczx">
    <view style="text-align:center;">
      <image src="/public/images/mymubiao.png" style="width:100rpx;height:100rpx;"></image>
      <view style="margin-top:16rpx;color:#666;">我的目标</view>
    </view>
    <view style="text-align:center;">
      <image src="/public/images/myshoucang.png" style="width:100rpx;height:100rpx;"></image>
      <view style="margin-top:16rpx;color:#666;">我的收藏</view>
    </view>
    <view style="text-align:center;">
      <image src="/public/images/bangzhu.png" style="width:100rpx;height:100rpx;"></image>
      <view style="margin-top:16rpx;color:#666;">帮助中心</view>
    </view>
  </view>
  <!-- 目标+收藏+中心 end -->
  <!-- 高度背景 start -->
  <view style="height:30rpx;background:#eee;"></view>
  <!-- 高度背景 end -->
  <!-- 我的空间 start -->
  <view class="myZoom">
  
  </view>
  <!-- 我的空间 end -->
</view>


